<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/new_bedtime_dialog_background_color"
              android:orientation="vertical"
              android:focusableInTouchMode="false"
              android:focusable="false">

    <com.medcorp.lunar.view.picker.RadialPickerLayout
        android:id="@+id/new_alarm_time_select_rp"
        android:layout_height="260dp"
        android:layout_width="260dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/add_new_alarm_dialog_weekday_ll"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/bedtime_sunday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/sunday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/bedtime_monday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/monday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/bedtime_tuesday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/tuesday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/bedtime_wednesday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/wednesday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <CheckBox
                android:id="@+id/bedtime_thursday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/thursday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/bedtime_friday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/friday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/bedtime_saturday"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerInParent="true"
                android:background="@drawable/toggle_btn_repeat_week"
                android:button="@null"
                android:gravity="center"
                android:text="@string/saturday"
                android:textColor="@drawable/check_button_text_color_select"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_new_alarm_dialog_show_goal_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_sleep_goal_describe"
            android:textColor="@color/add_new_alarm_text_color"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/add_new_alarm_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:alpha="0.87"
            android:maxLines="1"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingTop="4dp"
        android:textColorHint="@color/add_new_alarm_text_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="10dp"
        app:hintTextAppearance="@style/hintAppearance">
        <EditText
            android:id="@+id/add_new_alarm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/set_new_alarm_label"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/add_new_alarm_text_color"
            android:textColor="@android:color/black"
            android:alpha="0.87"
            android:inputType="text"
            android:theme="@style/myEditStyle"
            android:textSize="16sp"
            android:maxLines="1"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>