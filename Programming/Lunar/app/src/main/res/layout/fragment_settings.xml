<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/fragment_setting_app_list_title"
            android:textColor="@color/graph_grid_line_color"
            android:textSize="16sp"/>

        <com.medcorp.lunar.view.ListViewForScrollView
            android:id="@+id/fragment_setting_app_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:divider="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/md_divider_white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/fragment_setting_device_list_title"
            android:textColor="@color/graph_grid_line_color"
            android:textSize="16sp"
            />

        <com.medcorp.lunar.view.ListViewForScrollView
            android:id="@+id/fragment_setting_device_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:divider="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/md_divider_white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/fragment_setting_local_list_title"
            android:textColor="@color/graph_grid_line_color"
            android:textSize="16sp"/>

        <com.medcorp.lunar.view.ListViewForScrollView
            android:id="@+id/fragment_setting_local_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:divider="@null"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none"/>
    </LinearLayout>
</ScrollView>