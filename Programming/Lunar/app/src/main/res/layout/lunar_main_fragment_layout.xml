<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_background_color"
              android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/main_fragment_title_tab_layout"
        style="@style/AnalysisTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/tab_layout_normal_text_color"
        app:tabIndicatorColor="@color/white"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_lunar_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/window_background_color"/>

    <LinearLayout
        android:id="@+id/ui_page_control_point"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>