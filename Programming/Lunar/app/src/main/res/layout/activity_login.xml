<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/login_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.medcorp.activity.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:background="@android:color/transparent"
                android:text="@string/login_activity_title"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@color/window_background_color"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">
                <!--  Email Label -->
                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/shape_input_email_account_bg"
                    android:hint="@string/log_in_email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="8dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"/>

                <!--  Password Label -->

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_input_email_account_bg"
                    android:hint="@string/log_in_password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_login_button_bg"
                    android:gravity="center"
                    android:text="@string/log_in"
                    android:textAllCaps="false"
                    android:textColor="@color/login_text_color_with"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">

                        <View
                            android:id="@+id/left_line"
                            android:layout_width="60dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:background="@color/left_menu_item_text_color"/>

                        <TextView
                            android:id="@+id/middle_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_toRightOf="@+id/left_line"
                            android:text="@string/login_activity_other_account"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>

                        <View
                            android:layout_width="60dp"
                            android:layout_height="1dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/middle_text"
                            android:background="@color/left_menu_item_text_color"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/facebook_login_bt"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/facebook_button_bg"
                            android:src="@drawable/ic_facebook_login"/>

                        <ImageButton
                            android:id="@+id/twitter_login_bt"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/twitter_button_bg"
                            android:src="@drawable/ic_twitter_icon"/>

                        <ImageButton
                            android:id="@+id/wechat_login_bt"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/wechat_button_bg"
                            android:src="@drawable/ic_wechat_green"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/forget_password_send_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/transparent"
                        android:text="@string/forget_password_bt_tv"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/cancel_login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/transparent"
                        android:text="@string/cancel_login_bt_tv"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>