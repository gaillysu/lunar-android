<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="260dp"
              android:background="@android:color/white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/bottom_title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="16dp"
        android:alpha="0.5"
        android:gravity="center_vertical"
        android:text="@string/edit_new_sleep_goal_bottom_dialog_title"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <ListView
        android:id="@+id/show_all_sleep_goal_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:id="@+id/divider_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/add_new_alarm_text_color"/>

        <Button
            android:id="@+id/add_presets_sleep_goal_bt"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_snackbar_action_edit"
            android:drawablePadding="30dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/edit_new_sleep_describe"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>