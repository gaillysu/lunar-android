<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/normal_item_expandable_edit_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/edit_normal_alarm_label_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit_alarm_label"
            android:tint="@color/colorAccent"/>

        <EditText
            android:id="@+id/edit_normal_alarm_label_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="54dp"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="13sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_bedtime_alarm_time_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_alarm_time_icon"
            android:tint="@color/colorAccent"/>

        <TextView
            android:id="@+id/edit_bedtime_alarm_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54dp"
            android:text="@string/alarm_edit_time_describe"
            android:textColor="@color/text_color"
            android:textSize="13sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bedtime_icon_tint_color"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/edit_normal_delete_alarm_ll"
            android:layout_width="250dp"
            android:layout_height="54dp"
            android:layout_marginRight="40dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_delete_alarm"
                android:tint="@color/colorAccent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="54dp"
                android:text="@string/edit_notification_delete_item"
                android:textColor="@color/text_color"
                android:textSize="13sp"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/close_edit_expandable_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/edit_bedtime_delete_alarm_ll"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close_expandable_icon"/>
    </RelativeLayout>
</LinearLayout>