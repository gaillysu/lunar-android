<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/clock_imageView"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lunar_watch_icon" />

        <ImageView
            android:id="@+id/lunar_main_clock_home_hour"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lunar_clockview_hour" />

        <ImageView
            android:id="@+id/lunar_main_clock_home_minute"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lunar_clockview_minute" />

        <com.medcorp.lunar.view.RoundProgressBar
            android:id="@+id/lunar_main_clock_steps_goal_analysis"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android_custom:roundColor="#00000000"
            android_custom:roundProgressColor="@color/tutorial_progress_bar_color"
            android_custom:roundWidth="5dp"
            android_custom:textIsDisplayable="false" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="362dp">


        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android_custom:layout_constraintGuide_percent="0.5"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="146dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android_custom:layout_constraintGuide_percent="0.36" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android_custom:layout_constraintGuide_percent="0.63" />

        <RelativeLayout
            android:id="@+id/lunar_main_clock_homecity_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/main_clock_fragment_content_shape"
            android_custom:layout_constraintBottom_toTopOf="@+id/guideline5"
            android_custom:layout_constraintDimensionRatio="h,1:1"
            android_custom:layout_constraintLeft_toLeftOf="@+id/guideline4"
            android_custom:layout_constraintTop_toTopOf="parent">


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lunar_main_clock_sleep_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/main_clock_fragment_content_shape"
            android_custom:layout_constraintBottom_toBottomOf="parent"
            android_custom:layout_constraintDimensionRatio="h,1:1"
            android_custom:layout_constraintRight_toLeftOf="@+id/guideline3"
            android_custom:layout_constraintTop_toTopOf="@+id/guideline5"
            android_custom:layout_constraintVertical_bias="0.0">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lunar_main_clock_solar_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/main_solar_bg_shape"
            android_custom:layout_constraintBottom_toBottomOf="@+id/lunar_main_clock_sleep_layout"
            android_custom:layout_constraintHorizontal_bias="1.0"
            android_custom:layout_constraintLeft_toLeftOf="@+id/guideline3"
            android_custom:layout_constraintRight_toLeftOf="@+id/guideline4"
            android_custom:layout_constraintTop_toTopOf="@+id/lunar_main_clock_steps_layout"
            android_custom:layout_constraintVertical_bias="1.0">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lunar_main_clock_sunset_sunrise_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/main_clock_fragment_content_shape"
            android_custom:layout_constraintBottom_toBottomOf="parent"
            android_custom:layout_constraintDimensionRatio="h,1:1"
            android_custom:layout_constraintLeft_toLeftOf="@+id/guideline4"
            android_custom:layout_constraintTop_toTopOf="@+id/guideline5"
            android_custom:layout_constraintVertical_bias="0.0">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lunar_main_clock_steps_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/main_clock_fragment_content_shape"
            android_custom:layout_constraintBottom_toTopOf="@+id/guideline5"
            android_custom:layout_constraintDimensionRatio="h,1:1"
            android_custom:layout_constraintRight_toLeftOf="@+id/guideline3"
            android_custom:layout_constraintTop_toTopOf="parent"
            android_custom:layout_constraintVertical_bias="0.0">

            <TextView
                android:textSize="7sp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_above="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:text="Steps Taken" />

            <TextView
                android:textSize="35sp"

                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="0" />

            <TextView
                android:textSize="11sp"
                android:textColor="@color/white"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="75% of Goal" />

        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>