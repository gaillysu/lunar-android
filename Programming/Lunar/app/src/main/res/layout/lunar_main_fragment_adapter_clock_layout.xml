<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android_custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/clock_imageView"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lunar_watch_icon"/>

        <ImageView
            android:id="@+id/lunar_main_clock_home_hour"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lunar_clockview_hour"/>

        <ImageView
            android:id="@+id/lunar_main_clock_home_minute"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lunar_clockview_minute"/>

        <com.medcorp.lunar.view.RoundProgressBar
            android:id="@+id/lunar_main_clock_steps_goal_analysis"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android_custom:roundColor="#00000000"
            android_custom:roundProgressColor="@color/tutorial_progress_bar_color"
            android_custom:roundWidth="5dp"
            android_custom:textIsDisplayable="false"/>
    </RelativeLayout>

    <include
        layout="@layout/lunar_fragment_main_content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1.3"/>
</LinearLayout>