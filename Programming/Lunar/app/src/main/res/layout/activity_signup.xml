<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/register_account_page_title"
            android:textColor="@color/text_color"
            android:textSize="28sp"
            android:typeface="monospace"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@color/window_background_color"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/shape_input_email_account_bg"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:textColorHint="@color/colorAccent"
                app:hintTextAppearance="@style/hintAppearance">

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:hint="@string/log_in_email"
                    android:inputType="textPersonName"
                    android:paddingLeft="12dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_input_email_account_bg"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:textColorHint="@color/colorAccent"
                app:hintTextAppearance="@style/hintAppearance">

                <EditText
                    android:id="@+id/register_account_activity_edit_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_input_email_account_bg"
                    android:hint="@string/register_first_name_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:paddingLeft="12dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_input_email_account_bg"
                android:gravity="center_vertical"
                android:paddingTop="2dp"
                android:textColorHint="@color/colorAccent"
                app:hintTextAppearance="@style/hintAppearance"
                >

                <EditText
                    android:id="@+id/register_account_activity_edit_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:hint="@string/register_last_name_hint"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:paddingLeft="12dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    />
            </android.support.design.widget.TextInputLayout>

            <!-- Password Label -->

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_input_email_account_bg"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/colorAccent"
                app:hintTextAppearance="@style/hintAppearance">

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/transparent"
                    android:hint="@string/log_in_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingLeft="12dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_input_email_account_bg"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textColorHint="@color/colorAccent"
                app:hintTextAppearance="@style/hintAppearance">

                <EditText
                    android:id="@+id/input_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:hint="@string/register_password_confirm"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingLeft="12dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_login_button_bg"
                android:text="@string/register_create_account"
                android:textAllCaps="false"
                android:textColor="@color/login_text_color_with"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <View
                        android:id="@+id/left_line"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/left_menu_item_text_color"/>

                    <TextView
                        android:id="@+id/middle_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_toRightOf="@+id/left_line"
                        android:text="@string/register_activity_other_account"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/middle_text"
                        android:background="@color/left_menu_item_text_color"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/use_facebook_account_register"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/facebook_button_bg"
                        android:src="@drawable/ic_facebook_login"/>

                    <ImageButton
                        android:id="@+id/use_wechat_account_register"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/wechat_button_bg"
                        android:src="@drawable/ic_wechat_green"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>