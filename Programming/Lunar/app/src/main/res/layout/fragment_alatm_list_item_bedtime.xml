<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    roboto:cardMaxElevation="2pt"
    android:background="@color/window_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_background_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/bedtime_item_sleep_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/moon_icon"
                android:tint="@color/bedtime_icon_tint_color"/>

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_sleep_time_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bedtime_item_sleep_icon"
                android:layout_toRightOf="@+id/bedtime_item_sleep_icon"
                android:gravity="bottom"
                android:text="jhggjh"
                android:layout_alignParentBottom="true"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="39sp"
                roboto:thin="true"/>

            <ImageView
                android:id="@+id/bedtime_item_wake_up_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/fragment_alarm_list_view_sleep_time_item"
                android:scaleType="fitXY"
                android:src="@drawable/setting_notfications"
                android:tint="@color/bedtime_icon_tint_color"/>

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_wake_up_time_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bedtime_item_wake_up_icon"
                android:gravity="bottom"
                android:layout_alignBottom="@+id/bedtime_item_sleep_icon"
                android:layout_alignParentBottom="true"
                android:text="jhggjh"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="39sp"
                roboto:thin="true"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/fragment_alarm_list_view_item_bedtime_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:focusable="false"
                android:shadowColor="@color/colorPrimary"
                android:theme="@style/my_switch_color"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_item_bedtime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_alarm_list_view_item_bedtime_wrapper"
                android:text="sdafds"
                android:textColor="@color/black"
                android:textSize="13sp"
                roboto:bold="true"/>

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_item_bedtime_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:text="adsad"
                android:textColor="@color/alarm_repeat_text_color"
                android:textSize="13sp"/>
        </LinearLayout>

        <com.github.aakira.expandablelayout.ExpandableLinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            app:ael_duration="400"
            app:ael_expanded="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/bedtime_sunday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/sunday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"/>

                <CheckBox
                    android:id="@+id/bedtime_monday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/monday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"
                    />

                <CheckBox
                    android:id="@+id/bedtime_tuesday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/tuesday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"
                    />

                <CheckBox
                    android:id="@+id/bedtime_wednesday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/wednesday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"
                    />

                <CheckBox
                    android:id="@+id/bedtime_thursday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/thursday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"
                    />

                <CheckBox
                    android:id="@+id/bedtime_friday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/friday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"
                    />

                <CheckBox
                    android:id="@+id/bedtime_saturday"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/toggle_btn_repeat_week"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/saturday"
                    android:textColor="@drawable/text_color_toggle_btn_circle"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/edit_bedtime_alarm_goal_ll"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/setting_goals"
                    android:tint="@color/colorAccent"/>

                <TextView
                    android:id="@+id/edit_bedtime_alarm_goal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="72dp"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/edit_bedtime_alarm_label_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_edit_bedtime_alarm_label"
                    android:tint="@color/colorAccent"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit_bedtime_alarm_label_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="72dp"
                        android:background="@null"
                        android:textColor="@color/text_color"
                        android:textSize="13sp"/>
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_bedtime_delete_alarm_ll"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_delete_alarm"
                    android:tint="@color/colorAccent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="72dp"
                    android:text="@string/edit_notification_delete_item"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </com.github.aakira.expandablelayout.ExpandableLinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
