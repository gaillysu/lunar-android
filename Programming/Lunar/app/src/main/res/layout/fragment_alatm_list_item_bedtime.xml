<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/window_background_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/alarm_adapter_item_title"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/append_new_alarm_bedtime"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/bedtime_item_root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bedtime_item_sleep_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignBottom="@+id/fragment_alarm_list_view_sleep_time_item"
                    android:layout_gravity="bottom"
                    android:src="@drawable/moon_icon"
                    android:tint="@color/bedtime_icon_tint_color"/>

                <com.medcorp.lunar.view.customfontview.RobotoTextView
                    android:id="@+id/fragment_alarm_list_view_sleep_time_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@+id/bedtime_item_sleep_icon"
                    android:gravity="bottom"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textSize="39sp"
                    roboto:thin="true"/>

                <ImageView
                    android:id="@+id/bedtime_item_wake_up_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/fragment_alarm_list_view_sleep_time_item"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/fragment_alarm_list_view_sleep_time_item"
                    android:scaleType="fitXY"
                    android:src="@drawable/setting_notfications"
                    android:tint="@color/bedtime_icon_tint_color"/>

                <com.medcorp.lunar.view.customfontview.RobotoTextView
                    android:id="@+id/fragment_alarm_list_view_wake_up_time_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/bedtime_item_wake_up_icon"
                    android:gravity="bottom"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/black"
                    android:textSize="39sp"
                    roboto:thin="true"/>
            </RelativeLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/fragment_alarm_list_view_item_bedtime_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:shadowColor="@color/colorPrimary"
                android:theme="@style/my_switch_color"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bedtime_item_show_alarm_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_item_bedtime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                roboto:bold="true"/>

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_item_bedtime_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_toRightOf="@+id/fragment_alarm_list_view_item_bedtime_label"
                android:textColor="@color/alarm_repeat_text_color"
                android:textSize="13sp"/>

            <ImageButton
                android:id="@+id/bedtime_open_expandable_ib"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_open_expandable_icon"/>
        </RelativeLayout>

        <include
            layout="@layout/bedtime_item_edit_view"
            android:visibility="gone"/>

        <View
            android:id="@+id/fragment_alarm_list_view_item_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bedtime_icon_tint_color"/>
    </LinearLayout>
</LinearLayout>