<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:roboto="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_alarm_list_view_item_alarm_time_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.medcorp.lunar.view.customfontview.RobotoTextView
            android:id="@+id/fragment_alarm_list_view_item_bedtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jhggjh"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="40sp"
            roboto:thin="true"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/fragment_alarm_list_view_item_bedtime_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:shadowColor="@color/colorPrimary"
            android:theme="@style/my_switch_color"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_item_bedtime_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_alarm_list_view_item_bedtime_wrapper"
                android:text="sdafds"
                android:textColor="@color/black"
                android:textSize="18sp"
                roboto:bold="true"/>

            <com.medcorp.lunar.view.customfontview.RobotoTextView
                android:id="@+id/fragment_alarm_list_view_item_sleep_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_alarm_list_view_item_bedtime_time_wrapper"
                android:paddingLeft="10dp"
                android:text="sdafds"
                android:textColor="@color/black"
                android:textSize="18sp"
                roboto:bold="true"/>
        </LinearLayout>

        <com.medcorp.lunar.view.customfontview.RobotoTextView
            android:id="@+id/fragment_alarm_list_view_item_bedtime_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="adsad"
            android:textColor="@color/alarm_repeat_text_color"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>