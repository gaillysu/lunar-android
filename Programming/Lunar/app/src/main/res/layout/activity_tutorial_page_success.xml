<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android_custom="http://schemas.android.com/tools"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/baseBackground"
                android:orientation="vertical">

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page5_search_success_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/tutorial_5_title"
        android:textColor="@color/black"
        android:textSize="45sp"
        roboto:bold="true"/>

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page5_searching_notice_textview"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_tutorial_page5_search_success_textview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="@string/tutorial_5_text"
        android:textColor="@color/left_menu_item_text_color"
        android:textSize="15sp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_tutorial_page5_searching_notice_textview"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_connect"/>

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/connect_watch_bg"
            />
    </FrameLayout>

    <com.medcorp.lunar.view.customfontview.RobotoButton
        android:id="@+id/activity_tutorial_success_next_button"
        style="@style/TutorialButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="@string/start_config_watch_tv"
        android:textColor="@color/tutorial_text_color"/>
</RelativeLayout>
