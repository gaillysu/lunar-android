<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:android_custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/main_clock_fragment_content_shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@string/lunar_home_clock_steps_title_tv"
                android:textColor="@color/text_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/lunar_main_clock_steps_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/steps_of_goal_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/window_background_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/main_clock_fragment_content_shape"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@string/lunar_main_clock_sleep_time_title"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:src="@drawable/moon_icon"/>

            <TextView
                android:id="@+id/lunar_main_clock_sleep_time_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:text="@string/def_sleep_text"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/window_background_color"/>


    <!--middle layout-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@drawable/main_solar_bg_shape"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lunar_main_clock_battery_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/lunar_main_clock_charging_status_title"
                android:textAllCaps="false"
                android:textColor="@color/edit_alarm_item_text_color"
                android:textSize="12sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:src="@drawable/sun_icon"/>

            <TextView
                android:id="@+id/lunar_main_clock_battery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:text="@string/lunar_home_clock_solar_harvest_idle"
                android:textColor="@color/edit_alarm_item_text_color"
                android:textSize="12sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/window_background_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="@string/lunar_main_clock_solar_harvesting_title"
                android:textColor="@color/edit_alarm_item_text_color"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/main_clock_solar_harvesting_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxLines="1"
                android:textColor="@color/edit_alarm_item_text_color"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/main_clock_solar_harvesting_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:textAllCaps="false"
                android:textColor="@color/edit_alarm_item_text_color"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/window_background_color"/>


    <!--right layout top-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/main_clock_fragment_content_shape"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:text="@string/lunar_main_clock_local_home_time"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/lunar_main_clock_home_city_time"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/main_clock_fragment_tv_bg"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/lunar_main_clock_home_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/lunar_main_clock_home_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </RelativeLayout>


        <!--right bottom layout -->
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/window_background_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/main_clock_fragment_content_shape"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/lunar_main_clock_home_city_sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="@string/lunar_main_clock_home_city_sunrise"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />

            <ImageView
                android:id="@+id/lunar_main_clock_home_city_sunrise_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:src="@drawable/sunrise_icon"/>


            <TextView
                android:id="@+id/lunar_main_clock_home_city_sunrise_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/seek_failed"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/lunar_main_clock_home_city_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>