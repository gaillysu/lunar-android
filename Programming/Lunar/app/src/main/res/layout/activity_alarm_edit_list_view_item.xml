<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp">

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_alarm_edit_list_view_item_delete_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/alarm_delete"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone"/>

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_alarm_edit_list_view_item_title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_color"
        android:textSize="16sp"/>

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_alarm_edit_list_view_item_summary_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_alarm_edit_list_view_item_title_label"
        android:layout_alignParentStart="true"
        android:textColor="@color/customGray"
        android:textSize="14sp"
        roboto:light="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/my_device_right_show_version_text_color"/>
</RelativeLayout>