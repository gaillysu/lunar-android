<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/baseBackground"
                android:orientation="vertical">

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page3_start_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/tutorial_3_title"
        android:textColor="@color/black"
        android:textSize="45sp"
        roboto:bold="true"/>

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page3_notice_textview"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/activity_tutorial_page3_start_textview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/tutorial_3_text"
        android:textColor="@color/left_menu_item_text_color"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/activity_tutorial_page3_image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/activity_tutorial_page3_notice_textview"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dial_crown"/>

    <com.medcorp.lunar.view.customfontview.RobotoButton
        android:id="@+id/activity_tutorial_3_next_button"
        style="@style/TutorialButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="@string/tutorial_next_step_text"/>
</RelativeLayout>