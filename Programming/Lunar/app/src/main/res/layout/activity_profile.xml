<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_background_color"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/window_background_color"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profile_activity_select_picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/user"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:text="@string/profile_user_information_title"
                    android:paddingLeft="4dp"
                    android:textColor="@color/profile_fragment_text_value_color"
                    android:textSize="14sp"/>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/profile_fragment_text_value_color"
                    app:hintTextAppearance="@style/hintTextStyle">

                    <EditText
                        android:id="@+id/profile_fragment_user_first_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/profile_fragment_first_name_text"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:theme="@style/my_edit_divider_style"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color"
                        android:textSize="14sp"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/profile_fragment_text_value_color"
                    app:hintTextAppearance="@style/hintTextStyle">

                    <EditText
                        android:id="@+id/profile_fragment_user_last_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/profile_fragment_last_name_text"
                        android:singleLine="true"
                        android:inputType="text"
                        android:theme="@style/my_edit_divider_style"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color"
                        android:textSize="14sp"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/profile_fragment_text_value_color"
                    app:hintTextAppearance="@style/hintTextStyle">

                    <EditText
                        android:id="@+id/profile_fragment_user_user_email_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/profile_fragment_email_text"
                        android:inputType="textEmailAddress"
                        android:singleLine="true"
                        android:theme="@style/my_edit_divider_style"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_color"
                        android:textSize="14sp"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:text="@string/profile_user_more_about_you_title"
                        android:textColor="@color/profile_fragment_text_value_color"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:id="@+id/edit_user_gender_pop"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_gender"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_gender_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_gender_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/profile_divider_view_background"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_user_birthday_pop"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_icon_birthday"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_birthday_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_birthday_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/profile_divider_view_background"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_user_height_pop"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_icon_height"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_height_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_height_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/profile_divider_view_background"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_user_weight_pop"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_icon_weight"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_weight_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_weight_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="2dp"
                                android:background="@color/profile_divider_view_background"/>
                        </LinearLayout>
                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/profile_logout_bt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="4dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|start"
                        android:text="@string/profile_logout_tv"
                        android:textAllCaps="false"
                        android:textColor="@color/pie_chart_child_color"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/profile_delete_bt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="4dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|start"
                        android:text="@string/profile_delete_tv"
                        android:textAllCaps="false"
                        android:textColor="@color/pie_chart_child_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
