<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_background_color"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/window_background_color"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/profile_activity_select_picture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/user"/>

            <RadioGroup
                android:id="@+id/profile_user_gender_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/profile_user_gender_male"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_select_drawable"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/activity_user_info_man"
                    android:textColor="@drawable/profile_radio_button_text_select"
                    android:textSize="16sp"/>

                <RadioButton
                    android:id="@+id/profile_user_gender_female"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_select_drawable"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/activity_user_info_female"
                    android:textColor="@drawable/profile_radio_button_text_select"
                    android:textSize="16sp"/>
            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center_vertical"
                    android:text="@string/profile_user_information_title"
                    android:textColor="@color/profile_fragment_text_value_color"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:id="@+id/profile_activity_edit_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="@string/profile_fragment_first_name_text"
                        android:textColor="@color/profile_fragment_text_value_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/profile_fragment_user_first_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/edit_user_first_name"
                        android:singleLine="true"
                        android:textColor="@color/profile_fragment_text_color"
                        android:textColorHint="@color/profile_fragment_text_color"
                        android:textSize="14sp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_activity_edit_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="@string/profile_fragment_last_name_text"
                        android:textColor="@color/profile_fragment_text_value_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/profile_fragment_user_last_name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/edit_user_last_name"
                        android:singleLine="true"
                        android:textColor="@color/profile_fragment_text_color"
                        android:textColorHint="@color/profile_fragment_text_color"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_activity_edit_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:text="@string/profile_fragment_email_text"
                        android:textColor="@color/profile_fragment_text_value_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/profile_fragment_user_user_email_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="@string/edit_user_email"
                        android:singleLine="true"
                        android:textColor="@color/profile_fragment_text_color"
                        android:textColorHint="@color/profile_fragment_text_color"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:gravity="center_vertical"
                        android:text="@string/profile_user_more_about_you_title"
                        android:textColor="@color/profile_fragment_text_value_color"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:id="@+id/edit_user_birthday_pop"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_icon_birthday"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_birthday_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_birthday_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:autoLink="all"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_user_height_pop"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_icon_height"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_height_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_height_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_user_weight_pop"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_icon_weight"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="54dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:text="@string/profile_fragment_user_weight_text"
                                android:textColor="@color/profile_fragment_text_value_color"
                                android:textSize="14sp"/>

                            <TextView
                                android:id="@+id/profile_fragment_user_weight_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:textColor="@color/profile_fragment_text_color"
                                android:textSize="14sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/profile_logout_bt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|start"
                        android:text="@string/profile_logout_tv"
                        android:textAllCaps="false"
                        android:textColor="@color/pie_chart_child_color"/>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/profile_delete_bt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical|start"
                        android:text="@string/profile_delete_tv"
                        android:textAllCaps="false"
                        android:textColor="@color/pie_chart_child_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
