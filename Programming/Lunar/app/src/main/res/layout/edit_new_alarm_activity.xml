<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.medcorp.lunar.view.PickerView
                android:id="@+id/select_alarm_morning_or_afternoon"
                android:layout_width="40dp"
                android:layout_height="100dp"/>

            <com.medcorp.lunar.view.PickerView
                android:id="@+id/select_alarm_hour"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/sleep_unit_hour"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>

            <com.medcorp.lunar.view.PickerView
                android:id="@+id/select_alarm_minute"
                android:layout_width="40dp"
                android:layout_height="100dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="@string/sleep_unit_minute"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/edit_new_alarm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/edit_alarm_name"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/new_alarm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_new_alarm_name"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/edit_new_alarm_name_bt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_right"
                android:textAllCaps="false"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/edit_new_alarm_repeat_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/edit_new_alarm_weekday_bt"
                android:text="@string/edit_alarm_repeat_day_tv"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/new_alarm_week_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_new_alarm_repeat_day"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/edit_new_alarm_weekday_bt"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_right"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>