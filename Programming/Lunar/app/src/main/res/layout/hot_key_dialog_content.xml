<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/text_color"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:paddingRight="30dp"
        android:text="@string/hot_key_describe"
        android:textColor="@color/fragment_steps_window_bg"
        android:textSize="14sp"/>

    <LinearLayout
        android:id="@+id/hot_key_find_my_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:paddingRight="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/hot_key_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="@string/hot_key_dialog_find_my_phone"
                android:textColor="@color/fragment_steps_window_bg"
                android:textSize="16sp"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/hot_key_find_my_phone_ck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/check_box_select"
            android:button="@null"
            android:clickable="false"
            android:checked="true"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hot_key_remote_camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_hot_key_camera"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="@string/hot_key_dialog_remote_camera"
                android:textColor="@color/fragment_steps_window_bg"
                android:textSize="16sp"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/hot_key_remote_camera_ck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/check_box_select"
            android:clickable="false"
            android:button="@null"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hot_key_control_music"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingRight="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_hot_key_music"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="@string/hot_key_dialog_control_music"
                android:textColor="@color/fragment_steps_window_bg"
                android:textSize="16sp"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/hot_key_control_music_ck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginLeft="20dp"
            android:button="@null"
            android:clickable="false"
            android:background="@drawable/check_box_select"/>
    </LinearLayout>

</LinearLayout>