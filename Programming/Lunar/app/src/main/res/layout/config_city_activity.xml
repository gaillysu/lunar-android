<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android_custom="http://schemas.android.com/tools"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/baseBackground"
                android:orientation="vertical">

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page5_search_success_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/config_time_title"
        android:textColor="@color/black"
        android:textSize="43sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page5_searching_notice_textview"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_tutorial_page5_search_success_textview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="@string/config_city_describe"
        android:textColor="@color/left_menu_item_text_color"
        android:textSize="15sp"/>

    <ImageButton
        android:id="@+id/select_sync_local_time"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"

        android:background="@drawable/select_city_search_button_bg"
        android:src="@drawable/ic_home_time"
        />

    <LinearLayout
        android:id="@+id/show_location_city_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_sync_local_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_location_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/left_menu_item_text_color"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/show_select_local_city_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>

    <com.medcorp.lunar.view.customfontview.RobotoButton
        android:id="@+id/config_location_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:layout_below="@+id/show_location_city_ll"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:drawableEnd="@drawable/ic_down"
        android:textSize="15sp"
        android:text="@string/select_local_city"
        android:textAllCaps="false"
        android:textColor="@color/tutorial_text_color"/>

    <com.medcorp.lunar.view.customfontview.RobotoButton
        android:id="@+id/config_next_button"
        style="@style/TutorialButton"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:text="@string/tutorial_3_next"
        android:layout_marginBottom="60dp"
        android:textColor="@color/tutorial_text_color"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
