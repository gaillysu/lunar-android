<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roboto="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/baseBackground"
                android:orientation="vertical">

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page4_start_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/tutorial_4_title"
        android:textColor="@color/black"
        android:textSize="36sp"
        roboto:bold="true"/>

    <com.medcorp.lunar.view.customfontview.RobotoTextView
        android:id="@+id/activity_tutorial_page4_notice_textview"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_tutorial_page4_start_textview"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/tutorial_4_text"
        android:textColor="@color/left_menu_item_text_color"
        android:textSize="12sp"/>

    <com.medcorp.lunar.view.customfontview.RobotoButton
        android:id="@+id/activity_tutorial_4_next_button"
        style="@style/TutorialButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="@string/tutorial_next_step_text"/>

    <ImageView
        android:id="@+id/activity_tutorial_page4_open_bt_image"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dial_press_right"/>

</RelativeLayout>